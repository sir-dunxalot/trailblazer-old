<li {{bind-attr class=':task_item task.completed:complete:not_complete'}}>

  <div class="task_name">
    {{capitalize-string task.name}}
  </div>

  <div class="task_buttons">

    {{#link-to 'task.edit' task class='sub'}}
      <span class="icon-pencil small sub"></span>
      <span class="hidden">Edit</span>
    {{/link-to}}

    <button
      {{bind-attr class=":button-unstyled task.completed:sub"}}
      {{action 'toggleTaskCompletion' task}}
      title="Complete this task"
    >
      {{#if task.completed}}
        <span class="icon-restart"></span>
        <span class="text">Restart</span>
      {{else}}
        <span class="icon-fire"></span>
        <span class="text">Blaze it</span>
      {{/if}}
    </button>

  </div>

</li>
