<header class="header" role="banner">

  <nav class="nav" role="navigation">
    <ul class="list-inline">

      <li class="letterhead">
        {{#link-to (if session.isAuthenticated 'features' 'index')}}
          Trailblazer
        {{/link-to}}
      </li>

      <li>
        {{#link-to
          (if session.isAuthenticated 'features' 'index')
          class='logo'
          title='View the roadmap'
        }}
          <span class="icon-logo"></span>
          <span class="icon-home"></span>
          <span class="hidden">
            {{if session.isAuthenticated 'Roadmap' 'Home'}}
          </span>
        {{/link-to}}
      </li>

      {{#if session.isAuthenticated}}
        {{#unless view.onLandingPage}}
          <li data-tour="settings_button">
            {{#link-to 'settings'}}
              <span class="icon-settings"></span>
              <span class="hidden">Settings</span>
            {{/link-to}}
          </li>
        {{/unless}}
      {{/if}}

    </ul>
  </nav>

</header>

<main class="main" role="main">
  {{outlet}}

  {{outlet 'modal' name='modal'}}

  <div class="c-notification__container">
    {{#each notifications as |notification|}}
      {{notification-message notification=notification}}
    {{/each}}
  </div>
</main>
