<header class="header" role="banner">

  <nav class="nav" role="navigation">
    <ul class="list-inline">

      <li class="letterhead">
        {{#link-to 'features.index'}}
          Trailblazer
        {{/link-to}}
      </li>

      <li>
        {{#link-to 'features.index' class='logo'}}
          <span class="icon-logo"></span>
          <span class="icon-home"></span>
          <span class="hidden">Roadmap</span>
        {{/link-to}}
      </li>

      {{#if session.isAuthenticated}}
        <li>
          {{#link-to 'settings'}}
            <span class="icon-settings"></span>
            <span class="hidden">Settings</span>
          {{/link-to}}
        </li>
      {{/if}}

      {{#if session.isAuthenticated}}
        {{#if view.onRoadmap}}
          <li class="new_feature">
            {{#link-to 'features.new' title='Add a new feature'}}
              <span class="icon-write"></span>
              <span class="hidden">Add a new feature</span>
            {{/link-to}}
          </li>
        {{/if}}
      {{/if}}

    </ul>
  </nav>

</header>

<main class="main" role="main">
  {{outlet}}
</main>
