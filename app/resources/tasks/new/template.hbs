{{#page-header}}
  <h1 class="title">
    {{#if new}}New{{else}}Edit{{/if}} Task
  </h1>
  <p class="subtitle">{{feature.name}}</p>
{{/page-header}}

{{#page-content class='center'}}
  {{#form-wrapper}}

    {{#form-controls legend='Add a new task to the feature'}}

      {{input name}}

      {{!-- TODO - set to last used stage --}}
      {{input stage
        as='selectize'
        content=feature.stages
        optionValuePath='content.id'
        optionLabelPath='content.type.capitalizedName'
        placeholder='Select a stage'
        disabled=editing
      }}

      {{input assignee
        as='selectize'
        content=users
        optionValuePath='content.id'
        optionLabelPath='content.fullName'
        placeholder='Select an assignee'
      }}

      {{!-- TODO if notTesting --}}
      {{#if new}}
        {{input testTaskSelection
          as='selectize'
          content=testTaskOptions
          optionValuePath='content.value'
          optionLabelPath='content.name'
          placeholder='Add a test task?'
          disabled=taskIsInTestingStage
        }}
      {{/if}}

      {{partial 'form-components/notes'}}

    {{/form-controls}}

    {{form-submission}}

  {{/form-wrapper}}
{{/page-content}}
