{{#page-header}}
  <h1 class="heading">Edit Your Profile</h1>
{{/page-header}}

{{#page-content class='center'}}

  {{#form-wrapper}}
    {{#form-controls legend='Edit your profile and team'}}

      {{input-group property='firstName'}}

      {{input-group property='lastName'}}

      {{input-group
        hint=teamHint
        label='Team ID'
        property='teamId'
        modelPath=null
      }}

      {{!-- TODO - image preview --}}
      {{input-group property='avatarUrl'}}

      {{input-group
        placeholder='Optional'
        property='email'
      }}

    {{/form-controls}}

    {{form-submission}}
  {{/form-wrapper}}

{{/page-content}}
