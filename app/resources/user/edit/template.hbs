{{#page-header}}
  <h1 class="heading">Edit Your Profile</h1>
{{/page-header}}

{{#page-content class='center'}}

  {{#form-wrapper}}
    {{#form-controls legend='Edit your profile and team'}}
      {{input-group value=firstName}}
      {{input-group value=lastName}}
      {{input-group
        hint=teamHint
        label='Team ID'
        value=teamId
      }}
      {{input-group value=avatarUrl}}
      {{!-- TODO - image preview --}}
      {{input-group
        placeholder='Optional'
        value=email
      }}
    {{/form-controls}}

    {{form-submission}}
  {{/form-wrapper}}

{{/page-content}}
