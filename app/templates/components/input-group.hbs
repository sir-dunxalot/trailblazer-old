{{#if label}}
  {{label-field
    for=inputId
    text=label
  }}
{{/if}}

<div class="input_wrapper">
  {{#if hasBlock}}
    {{!-- If block form... --}}
    {{yield}}
  {{else}}
    {{!-- ...else show input --}}
    {{partial inputPartial}}
  {{/if}}

  {{error-field
    label=label
    property=propertyWithModel
    showError=showError
  }}

  {{#if hint}}
    {{hint-field text=hint}}
  {{/if}}
</div>
